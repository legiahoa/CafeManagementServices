<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050509"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <!-- Thông tin chung đơn hàng -->
    <TextView
        android:id="@+id/tvOrderInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đơn #..."
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvCustomerInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Khách hàng: ..."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvOrderInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTableInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bàn: ..."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvCustomerInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvPaymentInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PT thanh toán: ..."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvTableInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Trạng thái: ..."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvPaymentInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Danh sách món trong đơn (nếu bạn muốn show) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOrderItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintBottom_toTopOf="@id/layoutBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tổng tiền + nút xác nhận -->
    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#15151B"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng: 0 đ"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnConfirmCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Xác nhận đã thu tiền"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:backgroundTint="#FFB74D"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
