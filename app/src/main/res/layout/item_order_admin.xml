<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#15151B"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Dòng 1: mã + thời gian -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đơn #ABC123"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvOrderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-12-13 10:20"
                android:textColor="#B0BEC5"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Dòng 2: khách + bàn -->
        <TextView
            android:id="@+id/tvOrderCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Khách: Nguyen Hieu"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvOrderTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bàn: Mang về"
            android:textColor="#CFD8DC"
            android:textSize="13sp" />

        <!-- Dòng 3: tổng tiền + PT thanh toán + trạng thái -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvOrderTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="147,000 đ"
                android:textColor="#FFB74D"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvOrderPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MoMo"
                android:textColor="#B0BEC5"
                android:textSize="11sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chờ xử lý"
                android:textColor="#FFB74D"
                android:textStyle="bold"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
